<div class="container">
  <div class="row karambol-spacedup">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'password_reset.reset_password' | trans }}</h3>
        </div>
        <div class="panel-body">
          {{ form_start(passwordResetForm) }}
          {{ form_row(passwordResetForm.email) }}
          <div class="clearfix">
            {{ form_row(passwordResetForm.submit, {'attr':{'class':'pull-right btn btn-success'}}) }}
          </div>
          {{ form_end(passwordResetForm, {'render_reset': true}) }}
        </div>
      </div>
    </div>
  </div>
</div>
