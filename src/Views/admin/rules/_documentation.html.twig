{% block api_doc %}
  {% set markdown_file = 'doc/' ~ app.locale ~ '/rules/' ~  ruleset.name ~ '_api.md'  %}
  {% if not file_exists(markdown_file) %}
    {% set markdown_file = 'doc/' ~ app.locale_fallbacks[0] ~ '/rules/' ~  ruleset.name ~ '_api.md'  %}
  {% endif %}
  {{ include_markdown_file(markdown_file) }}
{% endblock %}
